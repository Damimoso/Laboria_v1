# Variables de entorno para el backend completo de Laboria

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=123456
DB_NAME=laboria_db
DB_PORT=3306

# ===== CONFIGURACIÓN DE LA APLICACIÓN =====
NODE_ENV=development
PORT=3000

# ===== SEGURIDAD =====
JWT_SECRET=laboria_jwt_secret_2026_secure_key_change_this_in_production
SESSION_SECRET=laboria_session_secret_2026_change_this_in_production

# ===== CONFIGURACIÓN DE CORS =====
CORS_ORIGIN=http://localhost:5500

# ===== CONFIGURACIÓN DE RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CONFIGURACIÓN DE EMAIL =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password
EMAIL_FROM="Laboria" <noreply@laboria.com>

# ===== CONFIGURACIÓN DE ARCHIVOS =====
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ===== CONFIGURACIÓN DE LOGGING =====
LOG_LEVEL=info
