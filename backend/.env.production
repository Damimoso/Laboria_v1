# =============================================
# VARIABLES DE ENTORNO - PRODUCCIÓN LABORIA
# =============================================

# Configuración del Servidor
NODE_ENV=production
HOST=0.0.0.0
PORT=3000

# Configuración de Base de Datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=laboria_user
DB_PASSWORD=TuPasswordSegura123!
DB_NAME=laboria_prod
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00

# Configuración de JWT
JWT_SECRET=SuperSecretJWTKeyForProduction2026!@#$%^&*()
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Configuración de CORS
CORS_ORIGIN=https://laboria.com,https://www.laboria.com,https://app.laboria.com

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Email (SendGrid/SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASS=SG.YourSendGridAPIKey
EMAIL_FROM=noreply@laboria.com
EMAIL_FROM_NAME=Laboria

# Configuración de Archivos (AWS S3)
AWS_ACCESS_KEY_ID=YourAWSAccessKey
AWS_SECRET_ACCESS_KEY=YourAWSSecretKey
AWS_REGION=us-east-1
AWS_S3_BUCKET=laboria-uploads
AWS_S3_URL=https://laboria-uploads.s3.amazonaws.com

# Configuración de Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YourRedisPassword
REDIS_DB=0

# Configuración de SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/laboria.com.crt
SSL_KEY_PATH=/etc/ssl/private/laboria.com.key

# Configuración de Monitoring
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Configuración de Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=YourMixpanelToken

# Configuración de Pagos (Stripe)
STRIPE_PUBLIC_KEY=pk_live_YourStripePublicKey
STRIPE_SECRET_KEY=sk_live_YourStripeSecretKey
STRIPE_WEBHOOK_SECRET=whsec_YourWebhookSecret

# Configuración de CDN
CDN_URL=https://cdn.laboria.com
STATIC_URL=https://assets.laboria.com

# Configuración de Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=laboria-backups

# Configuración de Seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=SuperSecretSessionKeyForProduction2026!@#$%^&*()
COOKIE_SECRET=SuperSecretCookieKeyForProduction2026!@#$%^&*()

# Configuración de API Keys Externas
GOOGLE_MAPS_API_KEY=YourGoogleMapsAPIKey
LINKEDIN_CLIENT_ID=YourLinkedInClientID
LINKEDIN_CLIENT_SECRET=YourLinkedInClientSecret

# Configuración de WebSocket
WEBSOCKET_CORS_ORIGIN=https://laboria.com,https://www.laboria.com
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# Configuración de Performance
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_MORGAN=combined
MAX_REQUEST_SIZE=10mb

# Configuración de Desarrollo (desactivar en producción)
ENABLE_PLAYGROUND=false
ENABLE_INTROSPECTION=false
ENABLE_GRAPHQL_TOOLS=false
